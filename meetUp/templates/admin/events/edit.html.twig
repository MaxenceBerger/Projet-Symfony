{% extends 'base.html.twig' %}

{% block body %}

    <div class="jumbotron">
        <div class="container mt-3">
            <h2>Editer l'événement</h2>
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-4">
                    {{ form_row(form.title) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    {{ form_row(form.description) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    {{ form_row(form.capacity) }}
                </div>
                <div class="col-md-5">
                    {{ form_row(form.start_at) }}
                </div>
                <div class="col-md-5">
                    {{ form_row(form.finish_at) }}
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-12">
                {{ form_row(form.address) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                {{ form_row(form.postal_code) }}
            </div>
            <div class="col-md-8">
                {{ form_row(form.city) }}
            </div>
        </div>
        {{ form_widget(form) }}
        <button class="btn btn-primary">Sauvgarder</button>
        {{ form_end(form) }}
    </div>
{% endblock %}