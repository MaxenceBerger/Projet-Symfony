{% extends 'base.html.twig' %}

{% block title team.name %}

{% block body %}
        <div class="jumbotron">
            <div class="container">
                <div class="row">
                    <div class="col-md-8">

                    </div>
                    <div class="col-md-4">
                        <h1>{{ team.name }}</h1>
                        <a href="#" class="btn btn-primary">Rejoindre</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="container mt-4">
            <div class="row">
                <div class="col-md-8">
                    <h2 class="mb-2">Description :</h2>
                    <p>{{ team.description }}</p>
                </div>
                <div class="col-md-4">
                    <h2 class="mb-2">Informations :</h2>
                        <table class="table table-striped">
                            <tr>
                                <td>
                                    <p><strong>Thématique : </strong>{{ team.thematic }}</p>
                                    <p><strong>Groupe créer par : </strong>{{ team.user.firstname }}</p>
                                </td>
                            </tr>
                        </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}