<div class="card mt-4 mb-4 shadow">
    <a href="{{ path('events.show', {id: event.id, slug: event.slug}) }}" class="text-decoration-none">
        {% if event.filename %}
            <img src="/images/events/{{ event.filename }}" alt="card-img-top" style="width: 100%; height: 225px">
        {% endif %}
        <div class="card-body">
            <h5 class="card-title text-dark">
                {{ event.title }}
            </h5>
            <p class="card-text text-secondary">{{ event.city }} ({{ event.postalCode }})</p>
        </div>
    </a>
</div>
