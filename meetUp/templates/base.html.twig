<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <a class="navbar-brand mr-5" href="{{ path('home') }}">Meet Up</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        <li class="nav-item">
                            <a class="nav-link
                               {% if current_menu is defined and current_menu == "events" %}active{% endif %}"
                               href="{{ path('events.index') }}">Evenements
                            </a>
                        </li>
                        {% endif %}
                        <li class="nav-item">
                            {% if is_granted('ROLE_ADMIN') %}
                                <a class="nav-link
                               {% if current_menu is defined and current_menu == "admin.event" %}active{% endif %}"
                                   href="{{ path('admin.events.index') }}">
                                    Gestion des événements
                                </a>
                            {% endif %}
                        </li>
                        <li class="nav-item">
                            {% if is_granted('ROLE_ADMIN') %}
                                <a class="nav-link
                               {% if current_menu is defined and current_menu == "admin.team" %}active{% endif %}"
                                   href="{{ path('admin.events.index') }}">
                                    Gestion des groupes
                                </a>
                            {% endif %}
                        </li>
                    </ul>
                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <ul class="navbar-nav">
                        <li class="navbar-item">
                            <a href="{{ path('home') }}" class="nav-link">Mon Profil</a>
                        </li>
                    </ul>
                    {% endif %}
                    {% if app.user %}
                        <ul class="navbar-nav">
                            <li class="navbar-item">
                                <a href="{{ path('logout') }}" class="nav-link">Se déconnecter</a>
                            </li>
                        </ul>
                        {% else %}
                            <ul class="navbar-nav">
                                <li class="navbar-item">
                                    <a href="{{ path('login') }}" class="nav-link">Se connecter</a>
                                </li>
                            </ul>
                    {% endif %}
                </div>
            </nav>
        </header>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    </body>
</html>